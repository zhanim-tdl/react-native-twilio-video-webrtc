{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "jsx": "react-native", // enable JSX parsing
    "esModuleInterop": true, // fixes default-import warning
    "skipLibCheck": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}